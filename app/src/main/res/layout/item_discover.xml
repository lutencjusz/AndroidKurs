<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">

    <ImageView
        android:id="@+id/ivPodcastCover"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/logo"/>
    <TextView
        android:id="@+id/tvPodcastName"
        android:layout_toEndOf="@+id/ivPodcastCover"
        android:layout_toStartOf="@+id/btnAdd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Lorem ipsum lorem ipsum lorem ipsum"/>
    <TextView
        android:id="@+id/tvPodcastEpisodesCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/ivPodcastCover"
        android:layout_toStartOf="@+id/btnAdd"
        android:layout_below="@+id/tvPodcastName"
        tools:text="Lorem ipsum lorem ipsum lorem ipsum lorem ipsum lorem ipsum"/>
    <ImageButton
        android:id="@+id/btnAdd"
        tools:src="@drawable/ic_add"
        android:layout_alignParentEnd="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</RelativeLayout>